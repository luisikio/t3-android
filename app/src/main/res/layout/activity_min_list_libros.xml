<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".minListLibros">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvTitulomin"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/tvResumenmin"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/tvAutormin"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/tvFechamin"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:gravity="center"
            android:text="TextView" />

        <Button
            android:id="@+id/btnTienda1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tienda 1" />

        <Button
            android:id="@+id/btnTienda2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tienda 2" />

        <Button
            android:id="@+id/btnTienda3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIENDA 3" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>